{
    "name": "hi/kernel",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "psr/container": "^2.0",
        "alecrabbit/php-console-colour": "^0.10.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "vimeo/psalm": "^0.3.14"
    },
    "autoload": {
        "psr-4": {
            "Hi\\": "src/"
        },
        "files": [
            "functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hi\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
